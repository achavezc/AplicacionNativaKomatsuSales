<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrar_visita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="upc.edu.pe.app_komatsusales.activities.RegistrarVisitaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:scaleType="centerInside"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/logo_km" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"

        android:rowCount="4"
        android:columnCount="3">
        <TextView android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Cliente(*)"/>

        <EditText android:id="@+id/txtRazonSocialCliente"
            android:layout_width="200dp"
            android:layout_marginTop="5dip"
            android:ems="10"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBuscarCliente"
            tools:style="@style/Widget.AppCompat.Button.Small"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/places_ic_search" />

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="RUC(*)"/>

        <EditText android:id="@+id/txtRucCliente"
            android:layout_width="200dp"
            android:layout_marginTop="5dip"
            android:ems="10"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBuscarRUC"
            tools:style="@style/Widget.AppCompat.Button.Small"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/places_ic_search" />

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Comentarios"/>

        <EditText android:id="@+id/txtComentario"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:ems="10"/>

    </GridLayout>

    <TextView
        android:id="@+id/Direccion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#372c24" />

    <Button android:id="@+id/btnRegistrarVisita"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Registrar Visita"/>

</LinearLayout>
